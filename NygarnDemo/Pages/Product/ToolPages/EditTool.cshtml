@page "{id:int}"
@model NygarnDemo.Pages.Product.ToolPages.EditToolModel
@{
}

<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label asp-for="Tool.Id" class="control-lable"></label>
		<input asp-for="Tool.Id" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group">
		<label asp-for="Tool.Name" class="control-lable"></label>
		<input asp-for="Tool.Name" class="form-control" />
		<span asp-validation-for="Tool.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Tool.Description" class="control-label"></label>
		<input asp-for="@Model.Tool.Description" class="form-control" />
		<span asp-validation-for="@Model.Tool.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Tool.Price" class="control-lable"></label>
		<input asp-for="Tool.Price" class="form-control" />
		<span asp-validation-for="Tool.Price" class="text-danger"></span>
	</div>

	<p>
		<div class="form-group">
			<input type="submit" value="Update" class="btn btn-primary" />
		</div>
	</p>
</form>

<p>
	<a asp-page="/Product/ToolPages/GetAllTools">Back to List</a>
</p>