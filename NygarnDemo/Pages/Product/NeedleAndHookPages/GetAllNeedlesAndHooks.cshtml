@page
@using NygarnDemo.Enums
@model NygarnDemo.Pages.Product.CrochetHookPages.GetAllCrochetHooksModel
@{
}

<h1>Strikkepinde og hæklenåle</h1>
<div class="row">
    <div class="col-7"><h5>Search Name</h5></div>
    <div class="col-4"><h5>Filter Price</h5></div>
    <div class="col-1"></div>
</div>
<div class="row">
    <div class="col-4">
        <form method="post" class="form-inline">
            <div class="input-group mb-3">
                <input asp-for="SearchString" class="form-control mr-1" placeholder="Enter search term" />
                <input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
<div class="col-3"></div>
    <div class="col-5">
        <form method="post" class="form-inline">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Min</span>
                </div>
                <input asp-for="MinPrice" class="form-control me-2" />
                <div class="input-group-prepend">
                    <span class="input-group-text">Max</span>
                </div>
                <input asp-for="MaxPrice" class="form-control me-2" />
                <input type="submit" asp-page-handler="PriceFilter" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <form method="post">
             <select asp-for="Size" asp-items="Html.GetEnumSelectList<Size>()">
                <option value="">Choose size </option>
             </select>
             <button type="submit" asp-page-handler="SizeFilter">Filtrer</button>
        </form>
    </div>
    <div>
        <form method="post">
            <select asp-for="Material" asp-items="Html.GetEnumSelectList<NeedleAndHookMaterial>()">
                <option value="">Materiale </option>
            </select>
            <button type="submit" asp-page-handler="MaterialFilter">Filtrer</button>
        </form>
    </div>
    <div>
        <form method="post">
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<NeedleType>()">
                <option value="">Type </option>
            </select>
            <button type="submit" asp-page-handler="TypeFilter">Filtrer</button>
        </form>
    </div>
<div class="grid-container">
@if (Model.CrochetHooks != null)
{
    foreach (var crochetHook in Model.CrochetHooks)
    {
        <div class="row">
            <div class="col-sm-4 mb-3">
                <div class="card" style="width: 18rem;">
                        <div class="card" style="width: 18rem;">
                            @* <img class="card-img-top" src="..." alt="Card image cap"> *@
                            <div class="card-body">
                                <h5 class="card-title">@crochetHook.Name</h5>
                                <p class="card-text">Beskrivelse: @crochetHook.Description</p>
                                <p class="card-text">Pris: @crochetHook.Price</p>
                                <p class="card-text">Mærke: @crochetHook.Brand</p>
                                <p class="card-text">Materiale: @crochetHook.Material</p>
                                <p class="card-text">Størrelse: @crochetHook.Size</p>
                                <a href="#" class="btn btn-primary">Tryk for at se mere</a>
                            </div>
                        </div>
                  </div>
            </div>
        </div>
    }   
}
¨</div>
<div class="grid-container">
@if (Model.KnittingNeedles != null)
{
    foreach (var knittingNeedle in Model.KnittingNeedles)
    {
        <div class="card" style="width: 18rem;">
            @* <img class="card-img-top" src="..." alt="Card image cap"> *@
            <div class="card-body">
                <h5 class="card-title">@knittingNeedle.Name</h5>
                <p class="card-text">Beskrivelse: @knittingNeedle.Description</p>
                <p class="card-text">Pris: @knittingNeedle.Price</p>
                <p class="card-text">Mærke: @knittingNeedle.Brand</p>
                <p class="card-text">Materiale: @knittingNeedle.Material</p>
                <p class="card-text">Størrelse: @knittingNeedle.Size</p>
                <p class="card-text">Type: @knittingNeedle.Type</p>
                <a href="#" class="btn btn-primary">Tryk for at se mere</a>
            </div>
        </div>
    }
}
</div>