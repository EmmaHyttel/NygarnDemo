@if (Model.Patterns != null)
{
    foreach (var pattern in Model.Patterns)
    {
        <div class="card" style="width: 18rem;">
            @* <img class="card-img-top" src="..." alt="Card image cap"> *@
            <div class="card-body">
                <h5 class="card-title">@pattern.Name</h5>
                <p class="card-text">Beskrivelse: @pattern.Description</p>
                <p class="card-text">Pris: @pattern.Price</p>
                <p class="card-text">Mærke: @pattern.Brand</p>
                <p class="card-text">Designer: @pattern.Designer</p>
                <p class="card-text">Sværhedsgrad: @pattern.DifficultyLevel</p>
                <a href="#" class="btn btn-primary">Kom i kurv</a>
            </div>
        </div>
    }
}