<div class="row mt-4 justify-content-center">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="row no-gutters h-100">
                <div class="col-md-6 d-flex align-items-stretch">
                    <img class="card-img w-100 h-100" src="@(Url.Content("~/pngFiles/" + @Model.YarnProduct.ProductImage))" alt="Card image cap" style="object-fit: cover;">
                </div>
                <div class="col-md-6 d-flex align-items-stretch">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title mb-2">@Model.YarnProduct.Name</h3>
                        <div class="card-text mb-4">@Model.YarnProduct.Description</div>
                        <div class="card-text mb-4">Brand: @Model.YarnProduct.Brand</div>
                        <div class="card-text mb-4">Vægt: @Model.YarnProduct.Weight gram</div>
                        <div class="card-text mb-4">Løbelængde: @Model.YarnProduct.Yardage</div>
                        <div class="card-text mb-4">Størrelse: @Model.YarnProduct.KnittingTension</div>
                        <div class="card-text mb-4">Anbefalede pinde: @Model.YarnProduct.SuggestedNeedleSize</div>
                        <div class="card-text mb-4">Maskinevask: @(Model.YarnProduct.MachineWash ? "Ja" : "Nej")</div>
                        <div class="card-text mb-4">Farve: @Model.YarnProduct.Color</div>
                        <div class="card-text mb-4">Materiale: @Model.YarnProduct.Material</div>
                        <h6 class="card-footer text-muted mt-auto">Pris: @Model.YarnProduct.Price</h6>
                        <form method="post" style="display: inline;">
                            <input type="hidden" name="SelectedProductId" value="@Model.YarnProduct.ProductId" />
                            <input type="number" name="quantity" id="quantityInput" min="1" value="1" style="width: 40px; height: 30px; font-size: 16px;" />
                            <button class="btn btn-primary btn-sm rosybrown-bg" type="submit" asp-page-handler="AddToCart" style="font-size: 12px; padding: 5px 12px; height: 30px;" title="Shoppingkurv">
                                <i class="fa fa-shopping-cart"></i> Kom i kurv
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .h-100 {
        height: 100%;
    }

    .align-items-stretch {
        align-items: stretch;
    }
</style>





