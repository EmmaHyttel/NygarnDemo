@page
@using Microsoft.AspNetCore.Identity
@using NygarnDemo.Enums
@model NygarnDemo.Pages.Product.YarnPages.GetAllYarnProductsModel
@{
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    .wishlist-btn {
       /*  background: #bc8f8f;
        border: none;
        cursor: pointer;
        border-radius: 3px; */
    }

        .wishlist-btn i {
            font-size: 1.5rem;
           /*  color: black; */
        }

            .wishlist-btn i.filled {
                color: red;
            }

    .custom-card {
        width: 19rem;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .custom-card .card-body {
            flex: 1;
        }

        .custom-card img {
            height: 350px; 
            object-fit: cover;
        }

    .card-buttons {
        display: flex;
        gap: 2px; /* Justerer mellemrum mellem knapperne */
    }


