                    <div class="card-body">
                        <h5 class="card-title">@yarnProduct.Name</h5>
                        <h5 class="card-title">@yarnProduct.Brand</h5>
                        <p class="card-text">@yarnProduct.Description</p>
                        <p class="card-text">@yarnProduct.Price</p>
                        <p class="card-text">@yarnProduct.Material</p>
                        <a href="#" class="btn btn-primary">KØB DET GARN MA FREN</a>
                    </div>
                </div>
            </div>
