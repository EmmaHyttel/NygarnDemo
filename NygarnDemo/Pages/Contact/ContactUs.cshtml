@page
@model NygarnDemo.Pages.Contact.ContactUsModel
@{
}
<div class="container-fluid px-5 my-5">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0 rounded-3 shadow-lg overflow-hidden">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-sm-6 d-none d-sm-block bg-image">
                            <img src="/pngFiles/brev-sticker.jpg" class="img-fluid" alt="Descriptive Text">
                        </div>
                            <div class="col-sm-6 p-4">
                            <div class="text-center">
                                <div class="h3 fw-light">Kontakt os</div>
                                <p class="mb-4 text-muted">Skriv en besked herunder</p>
                            </div>


                            <form>

                                <!-- Name Input -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="name" type="text" placeholder="Name" data-sb-validations="required" />
                                    <label for="name">Navn</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">Angiv navn</div>
                                </div>

                                <!-- Email Input -->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="emailAddress" type="email" placeholder="Email Address" data-sb-validations="required,email" />
                                    <label for="emailAddress">Email</label>
                                    <div class="invalid-feedback" data-sb-feedback="emailAddress:required">Angiv email</div>
                                    <div class="invalid-feedback" data-sb-feedback="emailAddress:email">Email mangler eller er ikke korrekt</div>
                                </div>

                                <!-- Message Input -->
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" id="message" type="text" placeholder="Message" style="height: 10rem;" data-sb-validations="required"></textarea>
                                    <label for="message">Besked</label>
                                    <div class="invalid-feedback" data-sb-feedback="message:required">Skriv en besked</div>
                                </div>

                                <!-- Submit success message -->
                                <div class="d-none" id="submitSuccessMessage">
                                    <div class="text-center mb-3">
                                        <div class="fw-bolder">Beskeden er sendt!</div>
                                        <p>To activate this form, sign up at</p>
                                        <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                                    </div>
                                </div>

                                <!-- Submit error message -->
                                <div class="d-none" id="submitErrorMessage">
                                    <div class="text-center text-danger mb-3">Beskeden kunne ikke sendes!</div>
                                </div>

                                <!-- Submit button -->
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg disabled" id="submitButton" type="submit">Send</button>
                                </div>
                            </form>
                            <!-- End of contact form -->

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

