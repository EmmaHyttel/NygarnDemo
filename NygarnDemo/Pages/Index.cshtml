            <div class="carousel-controls">
                <button id="prevBtn">&#10094;</button>
                <button id="nextBtn">&#10095;</button>
            </div>
        </div>

        <script>
            const carousel = document.getElementById('carousel');
            const images = carousel.getElementsByTagName('img');
            const totalImages = images.length;
            const visibleImages = 6; // Number of images visible at a time
            const step = 1; // Move one image at a time
            let currentIndex = 0;

            document.getElementById('nextBtn').addEventListener('click', () => {
                if (currentIndex < totalImages - visibleImages) {
                    currentIndex += step;
                } else {
                    currentIndex = 0; // Reset to the beginning if at the end
                }
                updateCarousel();
            });

            document.getElementById('prevBtn').addEventListener('click', () => {
                if (currentIndex > 0) {
                    currentIndex -= step;
                } else {
                    currentIndex = totalImages - visibleImages; // Move to the end if at the beginning
                }
                updateCarousel();
            });

            function updateCarousel() {
                const imageWidth = images[0].clientWidth + parseInt(getComputedStyle(images[0]).marginRight, 10);
                carousel.style.transform = `translateX(-${currentIndex * imageWidth}px)`;
            }
        </script>
    </body>
</html>