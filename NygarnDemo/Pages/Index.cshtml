<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Carousel</title>
    <style>
        .carousel {
            display: flex;
            overflow: hidden;
            width: 100%;
            position: relative;
            max-width: 800px; /* Max width of the carousel */
            margin: auto; /* Center the carousel */
        }

            .carousel img {
                min-width: 100%;
                transition: transform 0.5s ease;
            }

        .carousel-controls {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
        }

            .carousel-controls button {
                background: rgba(0, 0, 0, 0.5);
                border: none;
                color: white;
                font-size: 2em;
                cursor: pointer;
                padding: 10px;
            }
    </style>
</head>
<body>
    <div class="carousel" id="carousel">
        <img src="https://via.placeholder.com/800x400?text=Image+1" alt="Image 1">
        <img src="https://via.placeholder.com/800x400?text=Image+2" alt="Image 2">
        <img src="https://via.placeholder.com/800x400?text=Image+3" alt="Image 3">
    </div>
    <div class="carousel-controls">
        <button id="prevBtn">&#10094;</button>
        <button id="nextBtn">&#10095;</button>
    </div>

    <script>
        const carousel = document.getElementById('carousel');
        const images = carousel.getElementsByTagName('img');
        const totalImages = images.length;
        let currentIndex = 0;

        document.getElementById('nextBtn').addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % totalImages;
            updateCarousel();
        });

        document.getElementById('prevBtn').addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + totalImages) % totalImages;
            updateCarousel();
        });

        function updateCarousel() {
            for (let i = 0; i < totalImages; i++) {
                images[i].style.transform = `translateX(-${currentIndex * 100}%)`;
            }
        }
    </script>
</body>
</html>
